@import "../templete/note.wxss";
.search_bar {
  display: flex;
  align-items: center;
  width:95%;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 18rpx;
  margin: 10px auto;
  border: 1rpx solid #f48787
}

.search_icon {
  margin-left: 15rpx;
}

.search_input {
  margin-left: 15rpx;
  height: 28px;
  line-height: 28px;
  font-size: 12px;
}

.search-box {
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.border-title {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.search-content {
  display: flex;
  flex-direction: row;
  margin-top: 2rpx;
  flex-wrap: wrap;
  margin-right: 5rpx;
  /* margin-top: -30rpx; */
}

.search-item {
  /* width: 160rpx; */
  align-items: center;
  height: 28px;
  line-height: 28px;
  font-size: 12px;
  padding-left: 28rpx;
  padding-right: 28rpx;
  /* line-height: 62rpx; */
  background: white;
  border: whitesmoke solid 1px;
  border-radius: 50rpx;
  text-align: center;
  margin-right: 30rpx;
  margin-top: 30rpx;
}


.tip-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 2rpx solid rgba(235, 235, 235, 1);
}

.tip {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.content {
  display: flex;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 44rpx;
  color: rgba(51, 51, 51, 1);
  margin-left: 22rpx;
}

.search-res {
  box-sizing: border-box;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.searchHigh {
  color: #37C2BC;
}

.notes {
  display: flex;
  justify-content: center;
  clear: both;
  overflow: hidden;
  width: 97%;
  margin-top: 5rpx;
  margin-left: 2%;
  padding-top: 20rpx;
  border-top: 1px;
  background-color: rgba(255, 255, 255, 0.644);
}

.noResult {
  display: flex;
  justify-content: center;
  margin-top: 50%;
}

.sorryText {
  color: darkgrey;
  margin-left: 3px;

}